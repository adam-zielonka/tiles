{
  "name": "adamzielonka.pro",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && pnpm postbuild",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check-watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "postbuild": "node --loader ts-node/esm ./src/postBuild.ts",
    "format": "prettier --write --plugin-search-dir=. ./src/**/*.{js,svelte,html,ts}",
    "lint": "eslint './src/**/*.{js,ts,svelte}'",
    "lint-junit": "eslint './src/**/*.{js,ts,svelte}' -f junit > eslint.xml",
    "lint:fix": "eslint --fix './src/**/*.{js,ts,svelte}'",
    "prelint": "pnpm run format"
  },
  "dependencies": {
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.32",
    "@tsconfig/svelte": "^2.0.1",
    "@types/marked": "^4.0.1",
    "@types/node": "*",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "auto-bind": "^5.0.1",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-svelte3": "^3.2.1",
    "front-matter": "^4.0.2",
    "marked": "^4.0.8",
    "node-sass": "^7.0.1",
    "prettier": "^2.5.1",
    "prettier-plugin-svelte": "^2.5.1",
    "replace-in-file": "^6.3.2",
    "sass": "^1.45.1",
    "svelte": "^3.44.0",
    "svelte-check": "^2.2.7",
    "svelte-preprocess": "^4.9.8",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4",
    "vite": "^2.7.2"
  }
}
